<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="multitouch.android.vogella.com.rempas">

    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_fingerprint"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Main2Activity"
            android:theme="@style/Theme.AppCompat.CompactMenu"
            android:label="RemPass" />
        <activity
            android:name=".Main3Activity"
            android:theme="@style/Theme.AppCompat.CompactMenu"
            android:label="RemPass" />
        <activity
            android:name=".Main4Activity"
            android:theme="@style/Theme.AppCompat.CompactMenu"
            android:label="RemPass" />
        <activity
            android:name=".Main5Activity"
            android:theme="@style/Theme.AppCompat.CompactMenu"
            android:label="RemPass" />
        <provider
            android:authorities="multitouch.android.vogella.com.rempas.PasswordProvider"
            android:multiprocess="true"
            android:name="multitouch.android.vogella.com.rempas.PasswordProvider"
            android:exported="false" />
    </application>

</manifest>